mixin header()

    | <!-- ********** header-S-1 ********** -->

    header.header.js-header
        nav.nav
            .w-center
                .nav__wrap
                    input#nav__checkbox.nav__checkbox(type="checkbox")
                    label.nav__toggle(for="nav__checkbox")
                        img.hamburger(src="static/img/content/hamburger.svg" alt="")
                        img.close(src="static/img/content/close.svg" alt="")
                    ul.nav__menu
                        li
                            a(href="/")
                                img.hamburger(src="static/img/content/logo.svg" alt="")
                        li
                            a(href="/#main") Home
                        li
                            a(href="/#courses") Courses
                        li
                            a(href="/#gallery") Gallery
                        li
                            a(href="/#about") About us
                        li
                            a(href="/#contacts") Contacts
